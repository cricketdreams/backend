// --------------------
// ---------- Session ----------
model Session {
  id        String   @id @default(uuid())
  ipAddress String
  name      String
  agent     String
  createdAt DateTime @default(now())
  expireAt  DateTime
  active    Boolean  @default(true)
  deleted   Boolean  @default(false)

  @@schema("base")
}

// --------------------
// ---------- Match ----------
model Match {
  matchId   Int      @id @default(autoincrement())
  name      String
  dataTime  DateTime // See later from api
  type      String
  declare   String
  wonBy     String
  plusMinus Float

  @@schema("base")
}
